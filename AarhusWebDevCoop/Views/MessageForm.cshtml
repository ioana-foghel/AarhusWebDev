@model AarhusWebDevCoop.ViewModels.MessageForm

@if (TempData["success"] == null)
{
    using (Html.BeginUmbracoForm("HandleFormSubmit", "Message", new object { }, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.NameMessage, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(m => m.NameMessage, new { @class = "form-control", placeholder = "Name" })
                @Html.ValidationMessageFor(m => m.NameMessage)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.MessageContent, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-6">
                @Html.TextAreaFor(m => m.MessageContent, new { @class = "form-control", placeholder = "Your message" })
                @Html.ValidationMessageFor(m => m.MessageContent)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-6">
                <button id="contact-submit" type="submit" class="btn btn-primary input-medium pull-left">Post</button>
            </div>
        </div>
    }
}
else
{
  <p> Thank you for your message! </p>
}