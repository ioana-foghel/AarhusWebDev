      <projectsItem id="1181" key="b150e1d0-6747-4778-9c49-ef2e1feff0df" parentID="1101" level="3" creatorID="0" sortOrder="7" createDate="2017-10-11T11:03:10" updateDate="2017-10-29T12:39:01" nodeName="HTTPS migration: a WordPress blog hosted on Dreamhost" urlName="https-migration-a-wordpress-blog-hosted-on-dreamhost" path="-1,1127,1101,1181" isDoc="" nodeType="1080" creatorName="Ioana Foghel" writerName="Ioana Foghel" writerID="0" template="1079" nodeTypeAlias="projectsItem">
