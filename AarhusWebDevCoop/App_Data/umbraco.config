      <projectsItem id="1180" key="f74b1f3c-0108-4037-bcd3-2c123fdb5609" parentID="1101" level="3" creatorID="0" sortOrder="6" createDate="2017-10-11T11:02:43" updateDate="2017-10-29T12:36:39" nodeName="Intercepting new Image().src requests" urlName="intercepting-new-image-src-requests" path="-1,1127,1101,1180" isDoc="" nodeType="1080" creatorName="Ioana Foghel" writerName="Ioana Foghel" writerID="0" template="1079" nodeTypeAlias="projectsItem">
